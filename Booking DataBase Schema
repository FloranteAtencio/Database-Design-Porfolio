CREATE INDEX [middleName] ON  [DriverInfo] ([NVARCHAR(50)]);

CREATE INDEX [License] ON  [DriverInfo] ([INT]);

CREATE TABLE [distanceMatrix] (
  [PK_distanceMatrix] INT PK,
  [FK_PriceSchema] INT FK,
  [FK_discount] INT FK,
  [Location] NVARCHAR(50),
  [Destination] NVARHCHAR(50),
  [kilometer] DECIMAL
);

CREATE TABLE [LandTranspoSchedule] (
  [INT PK] <type>,
  [DATE] <type>,
  [TIME] <type>,
  [NVARCHAR(25)] <type>,
  [NVARCHAR(25)] <type>
);

