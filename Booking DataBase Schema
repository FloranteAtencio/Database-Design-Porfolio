CREATE TABLE [LandTransfer] (
  [INT PK] <type>,
  [NVARCHAR(7)] <type>,
  [NVARCHAR(10)] <type>,
  [NVARCHAR(50)] <type>,
  [INT FK] <type>,
  [INT FK] <type>,
  [INT FK] <type>,
  [NVARCHAR(50)] <type>,
  CONSTRAINT [FK_LandTransfer.INT FK]
    FOREIGN KEY ([INT FK])
      REFERENCES [DriverInfo]([UUID]),
  CONSTRAINT [FK_LandTransfer.INT FK]
    FOREIGN KEY ([INT FK])
      REFERENCES [LandTranspoSchedule]([INT PK])
);

CREATE INDEX [PK_Landtransfer] ON  [LandTransfer] ([INT PK]);

CREATE INDEX [plateNo.] ON  [LandTransfer] ([NVARCHAR(7)]);

CREATE INDEX [type] ON  [LandTransfer] ([NVARCHAR(10)]);

CREATE INDEX [typeofBus] ON  [LandTransfer] ([NVARCHAR(50)]);

CREATE INDEX [FK_busSchedule] ON  [LandTransfer] ([INT FK]);

CREATE INDEX [FK_seat] ON  [LandTransfer] ([INT FK]);

CREATE INDEX [FK_driversInfo] ON  [LandTransfer] ([INT FK]);

CREATE INDEX [busRoute] ON  [LandTransfer] ([NVARCHAR(50)]);

CREATE TABLE [Seat] (
  [NVARCHAR(50)] <type>,
  [INT PK] <type>,
  [nvarchar(max)] <type>,
  CONSTRAINT [FK_Seat.NVARCHAR(50)]
    FOREIGN KEY ([NVARCHAR(50)])
      REFERENCES [LandTransfer]([INT FK])
);

CREATE INDEX [PK_seatAssigned] ON  [Seat] ([NVARCHAR(50)]);

CREATE INDEX [FK_busInfo] ON  [Seat] ([INT PK]);

CREATE INDEX [description] ON  [Seat] ([nvarchar(max)]);

CREATE TABLE [Discount] (
  [INT FK] <type>,
  [DECIMAL] <type>,
  [NVARCHAR(50)] <type>,
  [Datetime] <type>,
  CONSTRAINT [FK_Discount.INT FK]
    FOREIGN KEY ([INT FK])
      REFERENCES [distanceMatrix]([FK_discount])
);

CREATE INDEX [PK_discount] ON  [Discount] ([INT FK]);

